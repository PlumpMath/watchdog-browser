<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchdogBrowser"
        xmlns:awe="http://schemas.awesomium.com/winfx" x:Class="WatchdogBrowser.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="350" MinWidth="525" Height="350" Width="525"
        WindowState="Maximized" Icon="web_hi_res_512.ico"
        DataContext="{Binding Main, Source={StaticResource Locator}}">


    <DockPanel LastChildFill="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid Height="32" VerticalAlignment="Top" HorizontalAlignment="Stretch" DockPanel.Dock="Top"/>
        <Grid Height="8" VerticalAlignment="Top" HorizontalAlignment="Stretch" DockPanel.Dock="Bottom"/>
        <TabControl x:Name="uxTabs" ItemsSource="{Binding Tabs}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" MinWidth="128" MaxWidth="256">
                        <Ellipse Height="10" Width="10" Fill="Black" />
                        <TextBlock Margin="3"><Run Text="{Binding Title}"/></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <awe:WebControl Source="{Binding Url}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>


</Window>
