<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchdogBrowser"
        xmlns:awe="http://schemas.awesomium.com/winfx" x:Class="WatchdogBrowser.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="350" MinWidth="525" Height="350" Width="525"
        WindowState="Maximized">

    <DockPanel LastChildFill="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid Height="32" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Gray" DockPanel.Dock="Top"/>
        <Grid Height="32" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="Gray" DockPanel.Dock="Bottom"/>
        <TabControl x:Name="uxTabs">
            <TabItem x:Name="test">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" Width="96">
                        <Ellipse Height="10" Width="10" Fill="Black" />
                        <TextBlock Margin="3"><Run Text="Test"/></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <awe:WebControl Source="http://yandex.ru/"/>
            </TabItem>
            
        </TabControl>
    </DockPanel>


</Window>
